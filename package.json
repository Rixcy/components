{
    "name": "@rixcy/components",
    "version": "0.0.11",
    "description": "React/TypeScript components",
    "keywords": [],
    "homepage": "https://github.com/Rixcy/components#readme",
    "bugs": {
        "url": "https://github.com/Rixcy/components/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Rixcy/components.git"
    },
    "license": "MIT",
    "author": "Rixcy",
    "main": "dist/index.min.js",
    "module": "dist/index.esm.min.js",
    "types": "dist/index.d.ts",
    "typings": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "prebuild": "npx rimraf dist",
        "build": "bili",
        "build-storybook": "build-storybook --docs",
        "chromatic": "npx chromatic",
        "commit": "git-cz",
        "lint": "npx prettier --write .",
        "old-build": "concurrently yarn:build:*",
        "prepublishOnly": "yarn build && pkg-ok",
        "release": "release-it",
        "sort": "sort-package-json",
        "storybook": "start-storybook -p 6006",
        "test": "echo \"Error: no test specified\" && exit 1",
        "watch": "nodemon --watch src -e js,jsx,ts,tsx --exec yarn build"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "lint-staged": {
        "**/*.{md,yml,json,babelrc,eslintrc,prettierrc}": [
            "npx prettier --write"
        ],
        "**/*.{ts,tsx,js,jsx}": [
            "npx prettier --write"
        ],
        "**/package.json": [
            "npx sort-package-json"
        ]
    },
    "dependencies": {
        "@fortawesome/fontawesome-svg-core": "^1.2.30",
        "@fortawesome/free-brands-svg-icons": "^5.14.0",
        "@fortawesome/free-regular-svg-icons": "^5.14.0",
        "@fortawesome/free-solid-svg-icons": "^5.14.0",
        "@fortawesome/react-fontawesome": "^0.1.11",
        "popper.js": "^1.16.1",
        "react": "^16.13.1",
        "react-icons": "^3.11.0",
        "tailwindcss": "^1.8.10"
    },
    "devDependencies": {
        "@commitlint/cli": "^11.0.0",
        "@commitlint/config-conventional": "^11.0.0",
        "@storybook/addon-actions": "^6.0.22",
        "@storybook/addon-essentials": "^6.0.22",
        "@storybook/addon-links": "^6.0.22",
        "@storybook/addons": "^6.0.22",
        "@storybook/react": "^6.0.22",
        "@storybook/theming": "^6.0.22",
        "@types/classnames": "^2.2.10",
        "@types/lodash": "^4.14.161",
        "@types/react": "^16.9.49",
        "autoprefixer": "^9.8.6",
        "bili": "^5.0.5",
        "chromatic": "^5.1.0",
        "classnames": "^2.2.6",
        "commitizen": "^4.2.1",
        "concurrently": "^5.3.0",
        "cz-conventional-changelog": "^3.3.0",
        "git-cz": "^4.7.1",
        "husky": "^4.3.0",
        "lint-staged": "^10.4.0",
        "lodash": "^4.17.20",
        "nodemon": "^2.0.4",
        "pkg-ok": "^2.3.1",
        "prettier": "^2.1.2",
        "release-it": "^14.0.3",
        "rimraf": "^3.0.2",
        "rollup-plugin-typescript2": "^0.27.3",
        "sort-package-json": "^1.46.0",
        "typescript": "^4.0.3"
    },
    "peerDependencies": {
        "react": ">=16.8"
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org/"
    },
    "release-it": {
        "git": {
            "commitMessage": "chore: release v${version}"
        },
        "npm": {
            "publish": true,
            "skipChecks": true
        }
    }
}
