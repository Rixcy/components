{
    "name": "@rixcy/components",
    "version": "0.0.2",
    "description": "React/TypeScript components",
    "keywords": [],
    "homepage": "https://github.com/Rixcy/components#readme",
    "bugs": {
        "url": "https://github.com/Rixcy/components/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Rixcy/components.git"
    },
    "license": "MIT",
    "author": "Rixcy",
    "main": "dist/index.js",
    "unpkg": "dist/index.iife.js",
    "module": "dist/index.esm.js",
    "browser": "dist/index.iife.js",
    "files": [
        "dist"
    ],
    "scripts": {
        "prebuild": "npx rimraf dist",
        "build": "concurrently yarn:build:*",
        "build:cjs": "npx esbuild --minify --bundle --outfile=dist/index.js --format=cjs src/index.ts",
        "build:esm": "npx esbuild --minify --bundle --outfile=dist/index.esm.js --format=esm src/index.ts",
        "build:iife": "npx esbuild --minify --bundle --outfile=dist/index.iife.js --format=iife src/index.ts",
        "build:types": "tsc --emitDeclarationOnly --declaration --declarationMap --declarationDir dist",
        "commit": "git-cz",
        "lint": "npx prettier --write .",
        "prepublishOnly": "yarn build && pkg-ok",
        "release": "release-it",
        "sort": "sort-package-json",
        "test": "echo \"Error: no test specified\" && exit 1",
        "watch": "nodemon --watch src -e js,jsx,ts,tsx --exec yarn build"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "lint-staged": {
        "**/*.{md,yml,json,babelrc,eslintrc,prettierrc}": [
            "npx prettier --write"
        ],
        "**/*.{ts,tsx,js,jsx}": [
            "npx prettier --write"
        ],
        "**/package.json": [
            "npx sort-package-json"
        ]
    },
    "dependencies": {
        "react": "^16.13.1",
        "react-icons": "^3.11.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^11.0.0",
        "@commitlint/config-conventional": "^11.0.0",
        "@types/react": "^16.9.49",
        "commitizen": "^4.2.1",
        "concurrently": "^5.3.0",
        "cz-conventional-changelog": "^3.3.0",
        "esbuild": "^0.7.6",
        "git-cz": "^4.7.1",
        "husky": "^4.3.0",
        "lint-staged": "^10.4.0",
        "nodemon": "^2.0.4",
        "pkg-ok": "^2.3.1",
        "prettier": "^2.1.2",
        "release-it": "^14.0.3",
        "rimraf": "^3.0.2",
        "sort-package-json": "^1.46.0",
        "typescript": "^4.0.3"
    },
    "release-it": {
        "git": {
            "commitMessage": "chore: release v${version}"
        }
    }
}
